<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<link rel="icon" type="image/png" href="img/route.png" />

	<title> DriverApp </title>

	<meta name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <link rel="stylesheet" href="css/style.css" 	/>
	<link rel="stylesheet" href="css/login.css" 	/>
	<link rel="stylesheet" href="css/orders.css" 	/>
	<link rel="stylesheet" href="css/trips.css" 	/>

    <!-- Fonts and icons -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:500,400,300" rel="stylesheet">
</head>

<body ng-app="app" ng-init="modal = ''">
	<base href="/" />

	<div id="login-wrapper" class="fade" ng-show="!Auth.authenticated">
		<div id="login-panel">
			<div class="logo"> Cloud Routing </div>
			<span> Please sign in with your customer key </span>

			<div class="input-group">
				<input type="text" class="text-field" ng-model="Auth.key" placeholder="Customer key" />
				<div class="btn" ng-click="Auth.authenticate()"> Access </div>
			</div>
		</div>
	</div>

    <div id="dashboard" class="fadein" ng-show="Auth.authenticated">
        <div id="navbar">
            <div id="menu" ng-init="selectedTab = 'orders'">
                <!--<a ng-href="drivers"><div class="li" ng-class="{'active':selectedTab === 'drivers'}" ng-click="selectedTab = 'drivers'">Drivers</div></a>-->
                <a ng-href="orders"><div class="li" ng-class="{'active':selectedTab === 'orders'}" ng-click="selectedTab = 'orders'">Orders</div></a>
                <a ng-href="trips"><div class="li" ng-class="{'active':selectedTab === 'trips'}" ng-click="selectedTab = 'trips'">Trips</div></a>
            </div>
        </div>


        <div id="main" ng-view></div>

    </div>

	<!-- jQuery library -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<!-- Bootstrap -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

	<script> var jq = $.noConflict(true); </script>

	<!-- Angular -->
	<script src="js/angular.min.js"></script>
	<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular-route.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular-animate.js"></script>

	<script src="js/app.js"></script>
	<script src="js/Api.js"></script>
	<script src="js/Auth.js"></script>
	<script src="js/controllers/orders.controller.js"></script>

</body>
</html>
